block headerForRegist
    include headerForRegist.pug

block css
   <link rel="stylesheet" type="text/css" href="../css/main.css" />
   <link rel="stylesheet" href="https://bootswatch.com/4/cosmo/bootstrap.min.css">

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/auth/registration" method="POST">
                        <div class="form-group">
                            <h2>Реєстрація</h2>
                        </div>
                        <div class="form-group">
                            <input type="text" name="login" placeholder="Введіть email" class="form-control" autofocus>
                            <span>#{errLogin}</span> 
                        </div>  
                        <div class="form-group">
                            <input type="password" name="password" class="form-control" placeholder="Введіть пароль" >           
                            <span>#{errPassword}</span>                                   
                        </div>
                        <div class="form-group">
                            <input type="password" name="passwordRepeat" class="form-control" placeholder="Введіть пароль знову" > 
                            <span>#{errPasswordRepeat}</span>                                        
                        </div>
                        <div class="form-group">
                            <input type="text" name="lastName" class="form-control" placeholder="Введіть фамілію" >                                             
                        </div>   
                        <div class="form-group">
                            <input type="text" name="firstName" class="form-control" placeholder="Введіть ім'я" >                                             
                        </div>
                        <div class="form-group">
                            <input type="text" name="phoneNumber" class="form-control" placeholder="Введіть телефон" >   
                            <span>#{errPhoneNumber}</span>                                          
                        </div>                                                               
                        <button type="submit" class="btn btn-outline-primary btn-lg btn-block">Зареєструватися</button>
                    </form>
                </div>    
            </div>    
        </div>
    </div>
</div>